<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Joo Framework SDK"
            id="joosdk">
      </category>
      <wizard
            name="Joo Layout"
            icon="icons/sample.gif"
            category="joosdk"
            class="org.jooframework.sdk.eclipse.NewLayout"
            id="org.jooframework.sdk.eclipse.NewLayout">
      </wizard>
      <wizard
            category="joosdk"
            class="org.jooframework.sdk.eclipse.NewProjectWizard"
            icon="icons/sample.gif"
            id="org.jooframework.sdk.eclipse.NewProjectWizard"
            name="Joo Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFolder"
            id="joosdk_ctxmenu.contribution1">
         <menu
               label="Joo SDK"
               path="additions"
               id="joosdk_ctxmenu.menu1">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="Generate default structure"
               class="org.jooframework.sdk.eclipse.popup.actions.StructureGenerator"
               menubarPath="joosdk_ctxmenu.menu1/group1"
               enablesFor="1"
               id="joosdk_ctxmenu.newAction">
         </action>
      </objectContribution>
   </extension>
</plugin>
